<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <title>Book your Tickets</title>

    <style type="text/css">
    body{
      background:url('back.jpg');
      background-size: cover;
      background-repeat: no-repeat;
    }
     .s
      {
        width: 70%;
       margin-left: 15%;
        
      }
      h2
      {
        margin-top: 5%;
        width: 30%;
        margin-left: 35%;
        text-align: center;
      }
      .img1{
        width: 100vw;
        height: 70vh;
      }
      a{
        color: black;
        font-weight: bold;
      }
      .container1
      {
        margin-bottom: 5%;
      }
      
    </style>
  </head>
  <body>
    
<!-- navbar -->
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;"">
  <a class="navbar-brand" href="/"><i class="fas fa-ticket-alt"></i> BookMyTicket</a>
  <ul class="nav justify-content-end">
 <%if(!currentuser){%>
  <li class="nav-item">
    <a class="nav-link font-weight-normal" href="/login">Login</a>
  </li>
  <li class="nav-item">
    <a class="nav-link font-weight-normal " href="/register">Register</a>
  </li>
<%}else{%>
   <li class="nav-item">
    <a class="nav-link font-weight-normal " href="/">Login as : <%=currentuser.name%></a>
  </li>
  <li class="nav-item">
    <a class="nav-link font-weight-normal " href="/logout">logout</a>
  </li>
<%}%>
  
</ul>
</nav>

<!-- navbar end -->


<!-- slider -->

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="kgf.jpg" class="d-block w-100 img1" alt="...">
    </div>
    <div class="carousel-item">
      <img src="bahubali.jpg" class="d-block w-100 img1" alt="...">
    </div>
    <div class="carousel-item">
      <img src="coco.jpeg" class="d-block w-100 img1" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- slider end -->


<h2 class="shadow-lg p-3 mb-5 bg-white rounded">Trending Movies</h2>

<!-- movies list -->
<div class="row">
<%moviedetail.forEach(function(movies){%>
<div class="col-md-3 col-sm-6 container container1">
  <div class="card" style="width: 18rem;">
  <img src="<%=movies.poster%>" class="card-img-top" style="height: 50vh" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%=movies.mtitle%></h5>
    <a href="/movie/<%=movies._id%>" class="btn btn-primary">Book Tickets</a>
  </div>
</div>
</div>
<%})%>
 </div>
<!-- movielist end -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
  </body>
</html>